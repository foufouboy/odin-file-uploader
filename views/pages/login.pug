extends ../partials/layout

block content
    #root(class="flex h-full items-center justify-center")
        form(method="post" class="flex flex-col items-center w-full px-8 sm:px-0 sm:w-[400px] gap-8") 
            img(src="/assets/icon.svg" alt="Site icon" class="w-12")

            h2(class="text-2xl font-bold") Sign in to your account

            if (incorrectInputs) 
                p(class="text-sm text-red-700 my-[-20px] self-start") The username and/or password are incorrect.

            fieldset(class="w-full")
                div.flex.flex-col
                    label(for="username" class="mb-1 text-sm") Username 
                    input(
                        type="text" 
                        name="username" 
                        class="border border-solid border-gray-300 rounded-md mb-5 px-2 py-1 focus:outline focus focus:outline-purple focus:outline-2 focus:outline-offset-[-1px]"
                        required
                    )
                
                div.flex.flex-col
                    label(for="password" class="mb-1 text-sm") Password 
                    input(
                        type="text" 
                        name="password"
                        class="border border-solid border-gray-300 rounded-md w-full px-2 py-1 focus:outline focus focus:outline-purple focus:outline-2 focus:outline-offset-[-1px]"
                        required
                    )

            
            button(class="rounded-md bg-purple text-white flex-grow w-full text-[1rem] font-semibold p-2 hover:bg-purple-dark transition") Sign in 

            p Not a member? 
                a(href="/register" class="text-purple font-semibold hover:text-purple-dark transition") Register